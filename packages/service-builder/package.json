{
  "description": "A lightweight, type-safe service builder inspired by tRPC for creating dependency-injected services with validated inputs",
  "devDependencies": {
    "@perimetre/eslint-config-base": "workspace:*",
    "@types/bun": "^1.3.4",
    "@types/node": "^22.19.3",
    "eslint": "^9.39.2",
    "tsdown": "0.18.1",
    "typescript": "^5.9.3",
    "zod": "^4.2.1"
  },
  "exports": {
    ".": {
      "import": {
        "default": "./dist/index.mjs",
        "types": "./dist/index.d.mts"
      },
      "require": {
        "default": "./dist/index.cjs",
        "types": "./dist/index.d.cts"
      },
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "service",
    "dependency-injection",
    "typescript",
    "validation",
    "zod",
    "type-safe"
  ],
  "license": "GPL-3.0",
  "main": "./dist/index.cjs",
  "name": "@perimetre/service-builder",
  "peerDependencies": {
    "zod": "^3.0.0 || ^4.0.0"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "directory": "packages/service-builder",
    "type": "git",
    "url": "https://github.com/perimetre/framework.git"
  },
  "scripts": {
    "build": "bun test && tsdown",
    "lint": "eslint .",
    "test": "bun test",
    "typecheck": "tsc --project tsconfig.build.json --noEmit"
  },
  "types": "./dist/index.d.ts",
  "version": "0.3.0"
}

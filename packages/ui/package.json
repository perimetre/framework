{
  "dependencies": {
    "@ladle/react": "^5.1.1",
    "@perimetre/classnames": "workspace:*",
    "@perimetre/helpers": "workspace:*",
    "@perimetre/icons": "workspace:*",
    "@radix-ui/react-icons": "^1.3.2",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "cva": "1.0.0-beta.4",
    "lucide-react": "^0.562.0",
    "postcss": "^8.5.6",
    "radix-ui": "^1.4.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  },
  "description": "A reusable UI library with composable themes",
  "devDependencies": {
    "@perimetre/eslint-config-base": "workspace:*",
    "@perimetre/eslint-config-react": "workspace:*",
    "@perimetre/prettier-config": "workspace:*",
    "@tailwindcss/cli": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^19.2.3",
    "chokidar": "^5.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "glob": "^13.0.0",
    "postcss-cli": "^11.0.1",
    "tsdown": "0.18.1",
    "vite": "npm:rolldown-vite@7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-lib-inject-css": "^2.2.2"
  },
  "exports": {
    ".": {
      "import": "./dist/es/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/index.d.ts"
    },
    "./*": {
      "import": "./dist/es/*.js",
      "require": "./dist/cjs/*.js",
      "types": "./dist/*.d.ts"
    },
    "./package.json": "./package.json",
    "./src/*": "./src/*",
    "./styles/*.css": "./dist/styles/*.css"
  },
  "files": [
    "dist",
    "src",
    "tailwind.config.js",
    "README.md"
  ],
  "license": "GPL-3.0",
  "main": "./dist/es/index.js",
  "module": "./dist/es/index.js",
  "name": "@perimetre/ui",
  "peerDependencies": {
    "react": ">= 19.0",
    "react-dom": ">= 19.0"
  },
  "prettier": "@perimetre/prettier-config",
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "directory": "packages/ui",
    "type": "git",
    "url": "https://github.com/perimetre/framework.git"
  },
  "scripts": {
    "build": "vite build",
    "dev": "ladle serve --viteConfig .ladle/vite.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "type": "module",
  "types": "./dist/index.d.ts",
  "version": "13.1.0"
}

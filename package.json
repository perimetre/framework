{
  "description": "Shared configurations and tooling for Perimetre projects",
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@perimetre/eslint-config-base": "workspace:*",
    "@perimetre/prettier-config": "workspace:*",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "pls-changeset-me": "^0.0.11",
    "prettier": "^3.6.2",
    "turbo": "latest",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{js,mjs,cjs,ts,tsx,json}": [
      "eslint --fix"
    ]
  },
  "name": "@perimetre/framework",
  "packageManager": "pnpm@10.11.0",
  "prettier": "@perimetre/prettier-config",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/perimetre/framework.git"
  },
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "prepare": "husky",
    "release": "turbo run build && changeset publish",
    "stage-build-output": "git add ppackages/*/*.d.mts packages/*/*.d.cts packages/*/*.d.ts 2>/dev/null || true",
    "typecheck": "turbo run typecheck",
    "version": "changeset version"
  },
  "version": "0.0.0"
}
